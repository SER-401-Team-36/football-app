{
    "scripts": {
        "lint": "eslint \"*/**/*.{js,ts}\" --quiet --fix",
        "test": "echo tests passed",
        "build": "tsc",
        "start:dev": "nodemon --exec \"ts-node -r dotenv/config\" src/index.ts",
        "start": "node build/index.js",
        "db:up": "db-migrate up",
        "db:down": "db-migrate down",
        "db:generate": "db-migrate create",
        "db:create": "db-migrate db:create lending-app-db"
    },
    "devDependencies": {
        "@types/express": "^4.17.8",
        "@types/node": "^14.11.8",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "db-migrate": "^0.11.11",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^8.2.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "nodemon": "^2.0.5",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "slonik": "^23.0.1"
    }
}
